@model mbsoft.BrewClub.Website.Models.Articles.ArticleDeleteViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    PageTitle = Localizer.Localize(LocalizedStringKeys.ArticlesTitle);
}

@using (Html.BeginForm("DeleteConfirmed", "Articles", new { articleID = Model.ArticleID }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Localizer.Localize(LocalizedStringKeys.ArticleDeleteArticleHeader)</h4>
        <hr />
        @Html.HiddenFor(model => model.ArticleID)

        <h4>@Html.DisplayFor(model => model.Title)</h4>

        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Body)</dt>
            <dd>@Html.DisplayFor(model => model.Body)</dd>

            <dt>@Html.DisplayNameFor(model => model.DateCreated)</dt>
            <dd>@Html.DisplayFor(model => model.DateCreated)</dd>

            <dt>@Html.DisplayNameFor(model => model.AuthorName)</dt>
            <dd>@Html.DisplayFor(model => model.AuthorName)</dd>

            <dt>@Html.DisplayNameFor(model => model.DateLastEdited)</dt>
            <dd>@Html.DisplayFor(model => model.DateLastEdited)</dd>
        </dl>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </div>
    </div>

}