@model mbsoft.BrewClub.Website.Models.Articles.DeleteCommentViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    PageTitle = Localizer.Localize(LocalizedStringKeys.ArticlesTitle);
}

@using (Html.BeginForm("DeleteCommentConfirmed", "Articles", new { commentID = Model.ArticleCommentID, articleID = Model.ArticleID }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>@Localizer.Localize(LocalizedStringKeys.ArticleDeleteCommentHeader)</h3>
        <hr />
        @Html.HiddenFor(model => model.ArticleID)

        <div class="panel panel-info panel-posted-item-comment">
            <div class="panel-body posted-item-comment-body">
                <p>@Html.DisplayFor(model => Model.Body)</p>
            </div>

            <div class="panel-footer panel-posted-item-comment-footer">
                <p class="label label-info label-pill label-posted-item-comment-detail">@Model.AuthorName </p>
                <p class="label label-info label-pill label-posted-item-comment-detail">@Model.DateCreated.ToString() </p>              
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
    </div>

}